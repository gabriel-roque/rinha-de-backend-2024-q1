{
  "compilerOptions": {
    "outDir": "dist",
    "rootDirs": [
      "src"
    ],
    "target": "es2021",
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "removeComments": true,
    "baseUrl": "src",
    "paths": {
      "@application/*": [
        "application/*"
      ],
      "@domain/*": [
        "domain/*"
      ],
      "@infra/*": [
        "infra/*"
      ],
      "@main/*": [
        "main/*"
      ]
    },
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "src"
  ]
}
